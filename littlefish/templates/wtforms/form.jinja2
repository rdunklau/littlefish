{% extends '_layout.jinja2' %}

{% macro wtfield(field) %}
  {% if field.name != 'csrf' %}
	{% if field.errors %}
	  {{ field.label(title=', '.join(field.errors)) }}
	{% else %}
	  {{ field.label() }}
	{% endif %}
  {% endif %}
  {{ field(**kwargs) | safe }}
{% endmacro %}

{% macro inner_wtform(form) %}
  {% for field, _ in form._unbound_fields %}
    {{ wtfield(form.__dict__[field]) | safe }}
  {% endfor %}
{% endmacro %}

{% macro wtform(form, url="", submittxt="Valider") %}
  <form method="POST" {{'action="%s"' % url if url}} enctype="multipart/form-data" data-form="true">
    {{ inner_wtform(form) | safe }}
	<input type="hidden" id="base_filter" value="{{base_filter}}"/>
    <input type="submit" id="{{submittxt}}" name="{{submittxt}}" value="{{submittxt}}"/>
  </form>
{% endmacro %}


{% block title %} {{ title }} {% endblock title %}

{% block content %}
  <article>
	{{ wtform(form, url) | safe }}
  </article>
{% endblock content %}
