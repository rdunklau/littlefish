{% macro gen_list_cell(values) %}
	<td>
	  <ul>
		{% for value in values or [] %}
		  <li>{{value}}</li>
		{% endfor %}
	  </ul>
	 </td>
{% endmacro %}
<html>
<head>
	<meta charset="UTF-8">
  	<link rel="stylesheet" href="./css/print_landscape.css"/>
</head>
<body>
<table class="seance_table">
  <tr>
  <th>Étapes (temps)</th>
  <th>Objectif</th>
  <th>Dispositif</th>
  <th>Déroulement</th>
  <th>Matériel</th>
  <th>Consignes / Critère de réussite</th>
  <th>Rôle PE</th>
  </tr>
{% for etape in seance.etapes %}
<tr>
		<td style="width: 10%;">{{etape.title}} <br/> {{etape.time}}</td>
		<td style="width: 10%;">{{etape.objectif}}</td>
		{{ gen_list_cell(etape.dispositif) }}
		{{ gen_list_cell(etape.deroulement) }}
		{{ gen_list_cell(etape.materiel_pe + etape.materiel_eleve) }}
		{{ gen_list_cell(etape.consignes_criteres) }}
		{{ gen_list_cell(etape.pe_role) }}
</tr>
{% endfor %}
</table>
</section>
</body>
</html>
